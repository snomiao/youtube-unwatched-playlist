{
  "name": "youtube-unwatched-playlist.user.js",
  "private": true,
  "version": "1.0.1",
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@csmith/release-it-calver-plugin": "^2023.12.0",
    "@release-it/bumper": "^7.0.5"
  },
  "scripts": {
    "fmt": "bunx @biomejs/biome check --fix",
    "release": "bunx release-it --ci"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "requireCleanWorkingDir": false,
      "requireBranch": "main"
    },
    "plugins": {
      "@release-it/bumper": {
        "in": {
          "file": "package.json"
        },
        "out": {
          "file": "main.user.js",
          "type": "text/plain"
        }
      }
    }
  }
}
